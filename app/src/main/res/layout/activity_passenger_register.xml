<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassengerRegister">



    <EditText
        android:id="@+id/PassengerNameR"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/PassengerPhoneR"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:hint="Phone"
        android:layout_below="@+id/PassengerNameR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/Passengeremail"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_below="@id/PassengerPhoneR"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/PassengerpasswordR"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_below="@+id/Passengeremail"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/RegisterPassengerR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/PassengerpasswordR"/>





</RelativeLayout>