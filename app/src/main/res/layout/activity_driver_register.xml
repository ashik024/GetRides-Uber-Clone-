<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverRegister">



    <EditText
        android:id="@+id/DriverNameR"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/DriverPhoneR"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:hint="Phone"
        android:layout_below="@+id/DriverNameR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/Driveremail"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_below="@id/DriverPhoneR"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/DriverpasswordR"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_below="@+id/Driveremail"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/DriverNumberPlateR"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_below="@+id/DriverpasswordR"
        android:hint="Car Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <Button
        android:id="@+id/RegisterDriverR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/DriverNumberPlateR"/>





</RelativeLayout>